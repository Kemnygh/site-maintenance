{{#partial "content"}}
    {{#if engineers}}
        <h3 class="index-title">Engineers</h3>
        <div class="table-div">
            <p><span style="color: grey;">Select engineer ID to see more details</span></p>
            <table class="table table-hover table-responsive table-sm">
                <thead class="table-info text-center">
                <tr>
                    <th scope="col">Engineer ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Email</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody class="table-group-divider bg-light">
                {{#each engineers }}
                    <tr class="text-center">
                        <th scope="row"><a href="/employees/{{id}}">{{eng_no}}</a></th>
                        <td>{{first_name}}</td>
                        <td>{{last_name}}</td>
                        <td>{{phone_no}}</td>
                        <td>{{email}}</td>
                        <td><a href="/engineers/{{id}}/edit"><i class="bi bi-pencil-square"></i></a></td>
                        <td><a href="" data-bs-toggle="modal" data-bs-target="#staticDeleteEng"><i class="bi bi-trash3"></i></a></td>
                        <!-- Delete Employee modal -->
                        <div class="modal fade" id="staticDeleteEng" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="staticBackdropLabel">Delete Engineer</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <i class="bi bi-shield-fill-exclamation text-danger"></i>
                                        Confirm you are about to delete an Engineer!!
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger btn-sm" onclick="window.location.href='/engineers/{{id}}/delete';">Delete</button>
                                        <button type="button" class="btn btn-success btn-sm" data-bs-dismiss="modal">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </tr>
                {{/each}}
                <tr>
                    <td colspan="8">Delete All Employees  <a href="" data-bs-toggle="modal" data-bs-target="#staticDeleteAllEng"><i class="bi bi-trash-fill"></i></a></td>
                </tr>
                </tbody>
            </table>
        </div>

        <!-- Delete All Employee modal -->
        <div class="modal fade" id="staticDeleteAllEng" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Delete All Engineers</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <i class="bi bi-shield-fill-exclamation text-danger"></i>
                        Confirm you are about to delete All Engineers!!
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger btn-sm" onclick="window.location.href='/engineers/delete/all';">Delete</button>
                        <button type="button" class="btn btn-success btn-sm" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>

    {{else}}
        <p class="text-center">No Entries!</p>
        <p class="text-center text-muted">Create Engineer from the tabs above.</p>
    {{/if}}
{{/partial}}

{{> layout.hbs}}